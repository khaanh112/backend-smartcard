// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Authentication and account management
model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String?
  googleId     String?   @unique
  fullName     String
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  profiles Profile[]
  payments Payment[]

  @@index([email])
  @@index([googleId])
  @@map("users")
}

// Profile model - User business card profile
model Profile {
  id          String   @id @default(uuid())
  userId      String
  slug        String   @unique
  fullName    String
  title       String?
  email       String?
  phone       String?
  address     String?
  avatarUrl   String?
  profileUrl  String?
  qrCodeUrl   String?
  themeId     String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme       Theme?           @relation(fields: [themeId], references: [id])
  experiences WorkExperience[]
  socialLinks SocialLink[]
  cards       Card[]
  payments    Payment[]
  views       ProfileView[]

  @@index([userId])
  @@index([slug])
  @@index([isPublished])
  @@map("profiles")
}

// WorkExperience model - Professional experience entries
model WorkExperience {
  id           String    @id @default(uuid())
  profileId    String
  company      String
  position     String
  startDate    DateTime
  endDate      DateTime?
  description  String?   @db.Text
  displayOrder Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, displayOrder])
  @@map("work_experiences")
}

// SocialLink model - Social media and contact links
model SocialLink {
  id           String         @id @default(uuid())
  profileId    String
  platform     SocialPlatform
  url          String
  displayOrder Int            @default(0)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, displayOrder])
  @@map("social_links")
}

enum SocialPlatform {
  FACEBOOK
  INSTAGRAM
  LINKEDIN
  TWITTER
  GITHUB
  YOUTUBE
  TIKTOK
  WEBSITE
  EMAIL
  PHONE
  ZALO
  TELEGRAM
}

// Theme model - Profile styling and layout configuration
model Theme {
  id           String   @id @default(uuid())
  name         String   @unique
  thumbnailUrl String?
  configJson   String   @db.Text
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  profiles Profile[]

  @@map("themes")
}

// Card model - Generated business card files
model Card {
  id         String   @id @default(uuid())
  profileId  String
  qrCodeUrl  String
  pngFileUrl String?
  pdfFileUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@map("cards")
}

// Payment model - Transaction records
model Payment {
  id            String        @id @default(uuid())
  userId        String
  profileId     String?
  amount        Decimal       @db.Decimal(10, 2)
  currency      String        @default("VND")
  status        PaymentStatus @default(PENDING)
  paymentMethod String
  transactionId String?       @unique
  metadata      String?       @db.Text
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile Profile? @relation(fields: [profileId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([transactionId])
  @@index([status])
  @@map("payments")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ProfileView model - Analytics tracking
model ProfileView {
  id        String     @id @default(uuid())
  profileId String
  source    ViewSource @default(DIRECT)
  ipAddress String?
  userAgent String?
  referrer  String?
  timestamp DateTime   @default(now())

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([timestamp])
  @@index([source])
  @@map("profile_views")
}

enum ViewSource {
  DIRECT
  QR_SCAN
  SOCIAL_MEDIA
  EMAIL
  OTHER
}
